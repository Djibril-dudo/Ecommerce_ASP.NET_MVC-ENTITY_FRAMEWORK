@using Ecommerce__projet.Models.Panier;

@model IEnumerable<Ecommerce__projet.Models.Produit>

@{
    ViewBag.Title = "InterfaceGenerale";
}
<!DOCTYPE html>
<html lang="zxx">
<head>
    <!-- Meta Tag -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name='copyright' content=''>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Title Tag  -->
    <title>eCommerce </title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/DesignClient/images/favicon.png">
    <!-- Web Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">

    <!-- StyleSheet -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/DesignClient/css/bootstrap.css">
    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~/DesignClient/css/magnific-popup.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/DesignClient/css/font-awesome.css">
    <!-- Fancybox -->
    <link rel="stylesheet" href="~/DesignClient/css/jquery.fancybox.min.css">
    <!-- Themify Icons -->
    <link rel="stylesheet" href="~/DesignClient/css/themify-icons.css">
    <!-- Nice Select CSS -->
    <link rel="stylesheet" href="~/DesignClient/css/niceselect.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/DesignClient/css/animate.css">
    <!-- Flex Slider CSS -->
    <link rel="stylesheet" href="~/DesignClient/css/flex-slider.min.css">
    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~/DesignClient/css/owl-carousel.css">
    <!-- Slicknav -->
    <link rel="stylesheet" href="~/DesignClient/css/slicknav.min.css">

    <!-- Eshop StyleSheet -->
    <link rel="stylesheet" href="~/DesignClient/css/reset.css">
    <link rel="stylesheet" href="~/DesignClient/css/responsive.css">
    <link href="~/DesignClient/style.css" rel="stylesheet" />


</head>
<body class="js">

    <!-- Preloader -->
    <div class="preloader">
        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Header -->
    <header class="header shop">
      
        <div class="middle-inner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-12">
                        <!-- Logo -->
                        <div class="logo">
                        </div>
                        <!--/ End Logo -->
                        <!-- Search Form -->
                        <div class="search-top">
                            <div class="top-search"><a href="#0"><i class="ti-search"></i></a></div>
                            <!-- Search Form -->
                           
                            <!--/ End Search Form -->
                        </div>
                        <!--/ End Search Form -->
                        <div class="mobile-nav"></div>
                    </div>
                    <div class="col-lg-8 col-md-7 col-12">
                        <div class="search-bar-top">
                            <div class="search-bar">
                              
                                <form>
                                    @Html.TextBox("chercher" )
                                    <button type="submit" class="btnn"><i class="ti-search"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-12">
                        <div class="right-bar">
                            <!-- Search Form -->
                            <div class="sinlge-bar">
                                <a href="#" class="single-icon"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
                            </div>
                            <div class="sinlge-bar">
                                <a href="#" class="single-icon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></a>
                            </div>
                            <div class="sinlge-bar shopping">
                                <a href="#" class="single-icon"><i class="ti-bag"></i> <span class="total-count"></span></a>
                                <div class="shopping-item">
                                    <div class="dropdown-cart-header">
                                        <span>Panier</span>

                                        <a href="@Url.Action("Commande","Client")" > Mon Panier</a>
                                    </div>
                                    <!-- Shopping Item -->
                                    @if (Session["panier"] != null)
                                    {

                                        foreach (PanierProduit item in (List<PanierProduit>)Session["panier"])
                                        {

                                            <ul class="shopping-list">
                                                <li><a class="cart-img" href="#"><img src="~/PhotoProduit/@item.Produitpanier.image" alt="#"></a>
                                                    <h4><a href="#">@item.Produitpanier.nom (@item.Quantite) </a></h4>
                                                    <p class="quantity"><span class="amount">@item.Produitpanier.prix </span></p>
                                                </li>
                                                <li>

                                            </ul>




                                        }
                                        
                                    }
                                </div>


                                    <!--/ End Shopping Item -->
                                </div>
                                    </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Inner -->
        <div class="header-inner">
            <div class="container">
                <div class="cat-nav-head">
                    <div class="row">
                        <div class="col-lg-3">
                           
                        </div>
                        <div class="col-lg-9 col-12">
                            <div class="menu-area">
                                <!-- Main Menu -->
                                <nav class="navbar navbar-expand-lg">
                                    <div class="navbar-collapse">
                                        <div class="nav-inner">
                                            <ul class="nav main-menu menu navbar-nav">
                                                <li class="active"><a href="#">Home</a></li>
                                                <li><a @Html.ActionLink("Nos Produits", "InterfaceGenerale", "Client")></a></li>
                                                <li><a @Html.ActionLink("Mon Panier", "Commande", "Client")></a></li>
                                                <li><a>Application E-Commerce</a></li>
                                                
                                            </ul>
                                        </div>
                                    </div>
                                </nav>
                                <!--/ End Main Menu -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Header Inner -->
    </header>
  
  
        <div class="product-area section">
            <div class="container">
                 <div class="row">
                        <div class="col-12">

                            <div class="tab-content" id="myTabContent">
                                <!-- Start Single Tab -->
                                <div class="tab-pane fade show active" id="man" role="tabpanel">
                                    <div class="tab-single">
                                        <div class="row">
                                            @foreach (var item in Model)
                                            {
                                                <div class="col-xl-3 col-lg-4 col-md-4 col-12">


                                                    <div class="single-product">
                                                        <div class="product-img">
                                                            <a href="product-details.html">
                                                                <img src="~/PhotoProduit/@item.image" />
                                                            </a>
                                                            <div class="button-head">
                                                                <div class="product-action">
                                                                    <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                                                                </div>
                                                                <div class="product-action-2">
                                                                    @if (item.quantite > 0)
                                                                    {
                                                                        using (Html.BeginForm("Panier", "Client", new { idproduit = item.idproduit }, FormMethod.Post))

                                                                        {
                                                                            <button type="submit" class="">Ajouter au panier</button>

                                                                        }
                                                                        <p> Disponible</p>
                                                                    }
                                                                    else
                                                                    {
                                                                        <p>Non disponible</p>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="product-content">
                                                            <div class="product-name">

                                                                Nom:  @item.nom
                                                            </div>
                                                            <div class="product-price">

                                                                Prix:  @item.prix Francs
                                                            </div>
                                                            <div style="float:right;bottom:200px">

                                                                Quantite: @item.quantite
                                                            </div>
                                                            <div class="product-price">

                                                                Titre: @item.titre
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                            }

                                            </div>

                                    </div>

                                </div>



                            </div>

                        </div>
                    </div>
                 </div> 
        </div>
             <!-- Start Shop Home List  -->
                        <!-- End Shop Newsletter -->
                        <!-- Modal -->
                       
                        <!-- Modal end -->
                        <!-- Start Footer Area -->
                       
                        <!-- /End Footer Area -->
                        <!-- Jquery -->
                        <script src="~/DesignClient/js/jquery.min.js"></script>
                        <script src="~/DesignClient/js/jquery-migrate-3.0.0.js"></script>
                        <script src="~/DesignClient/js/jquery-ui.min.js"></script>
                        <!-- Popper JS -->
                        <script src="~/DesignClient/js/popper.min.js"></script>
                        <!-- Bootstrap JS -->
                        <script src="~/DesignClient/js/bootstrap.min.js"></script>
                        <!-- Color JS -->
                        <script src="~/DesignClient/js/colors.js"></script>
                        <!-- Slicknav JS -->
                        <script src="~/DesignClient/js/slicknav.min.js"></script>
                        <!-- Owl Carousel JS -->
                        <script src="~/DesignClient/js/owl-carousel.js"></script>
                        <!-- Magnific Popup JS -->
                        <script src="~/DesignClient/js/magnific-popup.js"></script>
                        <!-- Waypoints JS -->
                        <script src="~/DesignClient/js/waypoints.min.js"></script>
                        <!-- Countdown JS -->
                        <script src="~/DesignClient/js/finalcountdown.min.js"></script>
                        <!-- Nice Select JS -->
                        <script src="~/DesignClient/js/nicesellect.js"></script>
                        <!-- Flex Slider JS -->
                        <script src="~/DesignClient/js/flex-slider.js"></script>
                        <!-- ScrollUp JS -->
                        <script src="~/DesignClient/js/scrollup.js"></script>
                        <!-- Onepage Nav JS -->
                        <script src="~/DesignClient/js/onepage-nav.min.js"></script>
                        <!-- Easing JS -->
                        <script src="~/DesignClient/js/easing.js"></script>
                        <!-- Active JS -->
                        <script src="~/DesignClient/js/active.js"></script>
    </body>
</html>
