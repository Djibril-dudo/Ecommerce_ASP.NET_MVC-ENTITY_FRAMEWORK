    <section class="shop checkout section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-12">
                    <div class="checkout-form">
                        <h2>Choix du client </h2>
                        <p>
                            Veuillez choissir votre identifiant sinon ajouter un nouveau
                            <div class="single-widget get-button">
                                <div class="content">
                                    <div class="button">
                                        <a class="btn" href="@Url.Action("InscrireClient","Client")" style="width:200px;height:50px" > Ajouter nouveau Client</a>
                                    </div>
                                </div>
                            </div>
                        </br> </br> </br>
                        <!-- Form -->
                        <form class="form" method="post" action="#">
                            <div class="row">

                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">

                                        @Html.DropDownList("listeclient", ViewBag.listvendeur as SelectList, "Choisissez un identifiant")

                                    </div>


                                </div>
                            </div>
                        </form>
                        <!--/ End Form -->
                    </div>
                </div>
                <div class="col-lg-4 col-12">
                    <div class="order-details">
                        <!-- Order Widget -->
                        <div class="single-widget">
                            @{ int Total = 0;}
                            @foreach (PanierProduit pa in (List<PanierProduit>)Session["panier"])
                            {
                                int total1 = Convert.ToInt32(pa.Quantite * pa.Produitpanier.prix);
                                Total = Convert.ToInt32(Total + total1);
                                <h2> TOTAL DU PANIER</h2>
                                <div class="content">
                                    <ul>
                                        <li>Prix Total<span>@Total francs</span></li>
                                    </ul>
                                </div>
                            }
                            </div>
                        <!--/ End Order Widget -->
                       
